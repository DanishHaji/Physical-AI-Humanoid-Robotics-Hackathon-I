# Physical AI Textbook RAG Backend - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Settings
# ============================================================================
ENVIRONMENT=development
DEBUG=True
HOST=0.0.0.0
PORT=8000
RELOAD=True

# ============================================================================
# OpenAI API Configuration
# ============================================================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.1

# ============================================================================
# Qdrant Cloud Configuration
# ============================================================================
# Sign up for free tier at: https://cloud.qdrant.io
# Free tier: 1GB storage, unlimited queries
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=textbook_chunks
QDRANT_VECTOR_SIZE=1536
QDRANT_DISTANCE=Cosine

# ============================================================================
# Neon Serverless PostgreSQL Configuration
# ============================================================================
# Sign up for free tier at: https://neon.tech
# Free tier: 0.5GB storage, 100 compute hours/month
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/textbook_db?sslmode=require
DB_POOL_MIN_SIZE=1
DB_POOL_MAX_SIZE=5

# ============================================================================
# RAG Configuration
# ============================================================================
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7
RAG_CHUNK_SIZE=1024
RAG_CHUNK_OVERLAP=100

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# ============================================================================
# CORS Configuration
# ============================================================================
# Add your frontend URLs (comma-separated for lists, or configure in config.py)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://your-username.github.io

# ============================================================================
# Query Routing Keywords (JSON arrays)
# ============================================================================
CODE_KEYWORDS=["code","example","implement","snippet","syntax","write","create"]
EXAM_KEYWORDS=["quiz","exam","test","mcq","assessment","question"]
EXPLAIN_KEYWORDS=["explain","what is","how does","why","describe"]
